<!DOCTYPE application [
<!ELEMENT program (meta-information, formats, layout)>
  <!ELEMENT meta-information (app_info, author_info, security, language)>
    <!ELEMENT app_info (name, description, created, modified)>
      <!ELEMENT name (#PCDATA)>
      <!ELEMENT description (#PCDATA)>
      <!ELEMENT created EMPTY>
        <!ATTLIST created date CDATA #REQUIRED>
      <!ELEMENT modified EMPTY>
        <!ATTLIST modified date CDATA #REQUIRED>
    <!ELEMENT author_info (name+,email?, company?)>
      <!ELEMENT name (#PCDATA)>
      <!ELEMENT email (#PCDATA)>
      <!ELEMENT company (#PCDATA)>
]>
