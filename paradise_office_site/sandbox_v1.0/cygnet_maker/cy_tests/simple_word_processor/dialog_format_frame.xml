<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<!DOCTYPE dialog PUBLIC "-//paradise-office//DTD cygnet-dialog 0.1//EN" "http://www.linux-paradise.co.uk/DTDs/cygnet/dialogs.dtd">
  <dialog name="Format Frame" type="modal">
    <field_box>
    <row num="1">
      <button name="Add frame" plugin="add_frame" options="new_frame" />
      <icon name="Left" pic="left_just.png" plugin="justify" options="left" />
      <icon name="Centre" pic="centre_just.png" plugin="justify" options="centre" />
      <icon name="Right" pic="right_just.png" plugin="justify" options="right" />
    </row>
    <row num="2">
      <control name="Background colour" spans="1 icon">
	<combo_box type="drop down" default="white" pic="bg_colour.png" plugin="bg_colour" /></control>
      <icon name="Border" pic="box_border.png" plugin="add_border" />
      <control name="Border size" spans="1 icon">
      <spinbox default="1" step_size="1" /></control>
      <control name="Border colour" spans="1 icon">
       <combo_box type="drop down" default="black" pic="border_colour.png" plugin="border_colour" /></control>
    </row>
    </field_box>
    
    <button name="OK" command="ok" /><button name="Cancel" command="cancel" />
  </dialog>
