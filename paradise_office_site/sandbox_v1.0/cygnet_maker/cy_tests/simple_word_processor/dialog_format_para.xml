<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE file PUBLIC "-//paradise-office//DTD text-processing 1.0//EN" "http://www.linux-paradise.co.uk/development/DTDs/text-processing_1.dtd">
  <dialog type="modal" name="Format paragraphs">
    <tab name="Alignment">
      <field_box>
      <row num="1">
        <icon name="Left" acckey="Ctrl + L" pic="left_just.png" plugin="justify"
      options="left" />
        <icon name="Centre" pic="centre_just.png" plugin="justify"
      options="centre" />
        <icon name="Right" acckey="Ctrl + R" pic="right_just.png"
      plugin="justify" options="right" />
        <icon name="Justify" acckey="Ctrl + J" pic="justify_just.png"
        plugin="justify" options="justify" />
        <checkbox_wLabel name="Drop cap" plugin="drop_cap" />
      </row>
      <row num="2">
        <label name="First line indent: " /><spinbox default="0"
    step_size="0.1" plugin="1st_line_indent" /><label name="mm" />
      </row>
      <row num="3">
        <label name="Line height: " /><spinbox default="1"
    step_size="0.25" plugin="line_height" /><label name="line" />
      </row>
      <row num="4">
        <text_preview type="alignment" spans="3 rows" />
      </row>
      <row num="5">
      </row>
      <row num="6">
      </row>
    </tab>

    <tab name="Tabs">
      <field_box name="Affected text" plugin="set_tabs">
        <row num="1">
          <radio_btns_wLabel group="text_choices" name="Apply to all text"
      options="all" />
        </row>
        <row num="2">
          <radio_btns_wLabel group="text_choices" name="Only selected text"
      options="selected" />
        </row>
      </field_box>
      <field_box name="Tab widths" plugin="set_tabs">
        <row num="3">
          <label name="Left: " /><spinbox default="0" step_size="1"
          options="left_mm" /><label name="mm" />
        </row>
        <row num="4">
          <label name="Tab on character: " /><text_field options="tab_char"
      name="tab character" width="2 chars" /><label name=" at " /><spinbox default="0" step_size="1"  options="char_mm" /><label name="mm" />
        </row>
        <row num="5">
          <label name="Right: " /><spinbox default="0" step_size="1"
        options="right_mm" /><label name="mm" />
        </row>
        <row num="6"></row>
      </field_box>
    </tab>

    <button name="OK" command="ok" /><button name="Cancel" command="cancel" />
  </dialog>