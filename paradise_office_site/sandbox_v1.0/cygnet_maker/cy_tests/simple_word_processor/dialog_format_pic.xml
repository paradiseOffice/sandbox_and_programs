<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE file PUBLIC "-//paradise-office//DTD text-processing 1.0//EN" "http://www.linux-paradise.co.uk/development/DTDs/text-processing_1.dtd">
  <dialog name="Format picture" type="modal">
    <field_box>
      <row num="1">
        <large_icon name="Colour" pic="colour_pic_square.png" plugin="format_pic"
    options="colour" />
        <large_icon name="Greyscale" pic="grey_pic_square.png" plugin="format_pic"
    options="greyscale" />
        <large_icon name="Black and white" pic="bw_pic_square.png"
    plugin="format_pic" options="black_and_white" />
      </row>
      <row num="2">
        <label name="Border: " /><combo_box type="drop down"
        plugin="preset_borders" />
      </row>
      <row num="3">
        <label name="Image transparency" />
      </row>
      <row num="4">
        <slider min="0" max="255" default="255" plugin="format_pic"
        options="opacity" />
      </row>
      <row num="5">
        <label name="Invisible" /><label align="right" name="Visible" />
      </row>
    </field_box>
      
    <button name="OK" command="ok" /><button name="Cancel" command="cancel" />
  </dialog>