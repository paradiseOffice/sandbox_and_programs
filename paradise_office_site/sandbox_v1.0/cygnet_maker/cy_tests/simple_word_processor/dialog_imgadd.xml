<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE file PUBLIC "-//paradise-office//DTD text-processing 1.0//EN" "http://www.linux-paradise.co.uk/development/DTDs/text-processing_1.dtd">
  <dialog type="modal" name="Add picture">
    <field_box>
      <row num="1">
        <label name="Picture file: " />
        <upload_pic name="Upload" type="with_text_field" plugin="insert_pic" />
      </row>
      <row num="2">
        <label name="Width: " />
        <spinbox step_size="1" plugin="insert_pic" options="set_width" />
        <label name="px" />
      </row>
      <row num="3">
        <label name="Height: " />
        <spinbox step_size="1" plugin="insert_pic" options="set_height" />
        <label name="px" />
      </row>
    </field_box>
      
    <button name="OK" command="ok" /><button name="Cancel" command="cancel" />
  </dialog>