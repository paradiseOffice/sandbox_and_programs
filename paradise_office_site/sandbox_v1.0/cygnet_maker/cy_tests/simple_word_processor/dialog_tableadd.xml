<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE file PUBLIC "-//paradise-office//DTD text-processing 1.0//EN" "http://www.linux-paradise.co.uk/development/DTDs/text-processing_1.dtd">
  <dialog type="modal" name="Insert table">
    <field_box>
      <row num="1">
        <label name="Table name: " /><text_field name="table_name" valid="short_text" plugin="insert_table" options="name" />
      </row>
      <row num="2">
        <label name="Rows: " /><spinbox default="3" step_size="1" plugin="insert_table" options="row_total" />
      </row>
      <row num="3">
        <label name="Columns: " />
        <spinbox default="2" step_size="1" plugin="insert_table" options="column_total" />
      </row>
    </field_box>
      
    <button name="OK" command="ok" /><button name="Cancel" command="cancel" />
  </dialog>