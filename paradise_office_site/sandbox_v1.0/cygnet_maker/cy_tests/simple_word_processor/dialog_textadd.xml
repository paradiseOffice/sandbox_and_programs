<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<!DOCTYPE dialog PUBLIC "-//paradise-office//DTD cygnet-dialog 0.1//EN" "http://www.linux-paradise.co.uk/DTDs/cygnet/dialogs.dtd">
  <dialog type="modal" name="Insert text from file">
    <field_box>
      <row num="1">
        <label name="Text file: " />
        <upload_text name="Uploaded text" ending="linux_or_mac" plugin="insert_text" options="file_name" />
      </row>              
    </field_box>
    <field_box name="Preview">
      <row num="2">
        <text_preview spans="2 rows" plugin="insert_text" options="file_preview" />
      </row>
      <row num="3"></row>
    </field_box>
    
    <button name="OK" command="ok" /><button name="Cancel" command="cancel" />
  </dialog>