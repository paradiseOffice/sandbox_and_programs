<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE program PUBLIC "-//paradise-office//DTD cygnet-application 0.1//EN" "http://www.linux-paradise.co.uk/DTDs/cygnet/application.dtd">
  <program>
    <meta-information>
      <app_info>
        <name>Simple Word Processor</name>
        <description>Edit and create short texts.</description>
        <created date="20130724" />
        <modified date="20130816" />
      </app_info>
      <author_info> 
        <name>Hazel Windle</name>
        <email>lead-dev@linux-paradise.co.uk</email>
        <company>Paradise Software</company>
      </author_info>
      <security> 
        <encryption method="md5" />
        <keyfile link="check20130816.md5" />
        <originating domain="http://www.paradise-office.co.uk" />
      </security>
      <language locale="en-gb" text="en-gb" direction="ltr" />
    </meta-information>

    <formats>
      <write_open_document_word_files />
      <read_open_document_word_files />
      <write_text_files file_ending="linux_or_mac" />
      <read_text_files file_ending="linux_or_mac" />
      <write_web_pages type="legacy" />
      <read_web_pages type="modern" />
      <write_ms_doc_files office-version="1997" />
      <read_ms_doc_files office-version="1997" />
    </formats>

    <layout type="tablet" effects="animation">
      <menu_bar no_of_menus="5">

        <menu name="File" acckey="F">
	  <menu_item name="New File" acckey="Ctrl + N" command="new" />
	  <menu_item name="Open" acckey="Ctrl + O" command="open_upload" open_browser="upload_box" />
	  <menu_item name="Save" acckey="Ctrl + S" command="save_download" open_browser="download_box" />
	  <menu_item name="Save As" acckey="Ctrl Shift + A" command="save_as_dl" opens_dialog="dialog_saveas.xml" />
	  <menu_item name="Convert File" acckey="Alt + V" command="convert_bfile" opens_dialog="dialog_convert.xml" />
	  <menu_item name="Print Preview" acckey="Alt + P" command="print_view" opens_dialog="dialog_print_preview.xml" />
	  <menu_item name="Print File" acckey="Ctrl + P" plugin="print" open_browser="print_box" />
	  <menu_item name="Close File" acckey="Ctrl + W" command="close_file" opens_dialog="dialog_confirm.xml" />
        </menu>
        <menu name="Edit" acckey="E">
          <menu_item name="Cut" acckey="Ctrl + X" plugin="cut_words" />
          <menu_item name="Copy" acckey="Ctrl + C" plugin="copy_words" />
	  <menu_item name="Paste" acckey="Ctrl + V" plugin="paste_words" />
	  <menu_item name="Clipboard" acckey="Ctrl Shift + V" plugin="clipboard_words" opens_dialog="dialog_clipboard.xml" />
	  <menu_item name="Delete" acckey="Del" plugin="del_words" />
	</menu>
	<menu name="View" acckey="V">
	  <menu_item name="10% Zoom" acckey="-10" plugin="zoom_up_page" options="10" />
	  <menu_item name="25% Zoom" acckey="-25" plugin="zoom_up_page" options="25" />
	  <menu_item name="50% Zoom" acckey="-50" plugin="zoom_up_page" options="50" />
	  <menu_item name="100% Zoom" acckey="0" plugin="zoom_up_page" options="100" />
	  <menu_item name="125% Zoom" acckey="+25" plugin="zoom_up_page" options="125" />
	  <menu_item name="150% Zoom" acckey="+50" plugin="zoom_up_page" options="150" />
	  <menu_item name="Fit Page Width" acckey="W" plugin="zoom_up_page" options="fitWidth" />
	  <menu_item name="Fit Page Height" acckey="H" plugin="zoom_up_page" options="fitHeight" />
	</menu>
	<menu name="Insert" acckey="I">
	  <menu_item name="Break" acckey="B" plugin="text_breaks" opens_dialog="dialog_breaks.xml" />
	  <menu_item name="Special Character" acckey="S" plugin="spec_char" opens_dialog="dialog_spec_char.xml" />
	  <menu_item name="Picture" acckey="P" command="pic_preview" opens_dialog="dialog_imgadd.xml" />
	  <menu_item name="Table" acckey="T" plugin="insert_table" opens_dialog="dialog_tableadd.xml" />
	  <menu_item name="Reference" acckey="R" plugin="insert_ref" opens_dialog="dialog_refadd.xml" />
	  <menu_item name="Link" acckey="L" plugin="insert_link" opens_dialog="dialog_linkadd.xml" />
	  <menu_item name="Text File" acckey="E" plugin="insert_text" opens_dialog="dialog_textadd.xml" />
	</menu>
	<menu name="Format" acckey="F">
	  <menu_item name="Words" acckey="W" plugin="format_words" opens_dialog="dialog_format_words.xml" />
	  <menu_item name="Paragraph" acckey="P" plugin="format_para" opens_dialog="dialog_format_para.xml" />
	  <menu_item name="Text Frame" acckey="T" plugin="format_frame" opens_dialog="dialog_format_frame.xml" />
	  <menu_item name="Style Table" acckey="a" plugin="format_table" opens_dialog="dialog_format_table.xml" />
	  <menu_item name="Picture" acckey="I" plugin="format_pic" opens_dialog="dialog_format_pic.xml" />
	  <menu_item name="Page" acckey="G" plugin="format_pages" opens_dialog="dialog_format_pages.xml" />
	</menu>
	<menu name="Help" acckey="H">
	  <menu_item name="About" acckey="A" plugin="show_about" opens_dialog="dialog_about.xml" />
	</menu>
      </menu_bar>

      <common_bar>
	<large_icon name="Print" acckey="Win + P" pic="icons/common/document-print.png" plugin="print" open_browser="print_box" />
	<large_icon name="Time" acckey="Win + T" pic="icons/common/time.png" plugin="current_time" options="now" />
	<large_icon name="Wikipedia" acckey="Win + W" pic="icons/text/book.png" plugin="research_wiki" opens_dialog="dialog_wiki_research_pane.xml" />
	<control name="Dictionary" acckey="Win + D" spans="large_icon">
	  <text_field name="Enter word" opens_dialog="dialog_lookup.xml" />
	  <button name="Look Up" pic="icons/internet/search.png" />
	</control>
	<large_icon name="Grammar" acckey="Win + G" pic="icons/text/grammar.png" command="lexigraphic_checker" opens_dialog="dialog_grammar.xml" />
      </common_bar>
      
      <tool_pane>
	<tool_box name="Words">
	  <control name="font_picker" spans="3 icons">
	    <combo_box type="drop down" plugin="font_list" />
	  </control>
	  <control name="font_size" spans="1 icon">
	    <spinbox default="12" step_size="1" plugin="format_words" options="font_size" />
	  </control>
	  <icon name="bold" acckey="Ctrl + B" pic="icons/text/format-text-bold.png" plugin="format_words" options="bold" />
	  <icon name="underline" acckey="Ctrl + U" pic="icons/text/format-text-underline.\
png" plugin="format_words" options="underline" />
	  <icon name="italic" acckey="Ctrl + I" pic="icons/text/format-text-italic.png" plugin="format_words" options="italic" />
	  <icon name="all caps" acckey="Ctrl Shift + U" pic="icons/text/pencil.png" plugin="all_caps" />
	  <control name="Text colour" spans="1 icon">
      <combo_box type="drop down" plugin="format_words" options="text_colour" />
	  </control>
	  <control name="Highlight colour" spans="1 icon">
      <combo_box type="drop down" plugin="format_words" options="highlight_colour" />
	  </control>
    <icon name="Superscript" pic="icons/text/superscript.png" plugin="format_words" options="sup_script" />
    <icon name="Subscript" pic="icons/text/subscript.png" plugin="format_words"  options="sub_script" />
	  <control name="Styles" spans="3 icons">
	    <combo_box type="drop down" plugin="styles_list" />
	  </control>
	  <icon name="add style" pic="icons/text/styles.png" plugin="add_style" />
	</tool_box>
	<tool_box name="paragraph">
	  <icon name="Left" acckey="Ctrl + L" pic="icons/text/format-justify-left.png'" plugin="justify" options="left" />
	  <icon name="Centre" pic="icons/text/format-justify-center.\
png" plugin="justify" options="centre" />
	  <icon name="Right" acckey="Ctrl + R" pic="icons/text/format-justify-right.png" plugin="justify" options="right" />
	  <icon name="Justify" acckey="Ctrl + J" pic="icons/text/format-justify-fill.p\
ng" plugin="justify" options="justify" />
	  <icon name="first line indent" pic="icons/text/sticky-notes\
.png" plugin="1st_line_indent" />
	  <icon name="Drop cap" pic="icons/text/drop_cap.png" plugin="drop_cap" />
	  <icon name="Increase Indent" pic="icons/text/format-indent-more.png" plugin="indent" options="increase" />
	  <icon name="Decrease Indent" pic="icons/text/format-indent-less.png" plugin="indent" options="decrease" />
	  <control name="line height" spans="2 icons">
	    <spinbox default="1" step_size="0.5" plugin="line_height" /><label name="line" />
	  </control>
	  <control name="left tab stop" spans="2 icons">
	    <spinbox default="0" step_size="0.5" plugin="set_tabs"  options="left_cm" /><label name="cm" />
	  </control>
	</tool_box>
	<help_box></help_box>
      </tool_pane>
      <file_port type="page">
	<context_menu />
	<lexigraphic_checker mode="autocheck_both" />
      </file_port>
      <status_bar>
	<label name="Word count" update="1 min" plugin="word_count" />
      </status_bar>
    </layout>
  </program>



