<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE program PUBLIC "-//paradise-office//DTD cygnet-application 0.1//EN" "http://www.linux-paradise.co.uk/DTDs/cygnet/application.dtd">
  <program>
    <meta-information>
      <app_info>
          <name>Jotter</name>
          <description>Edit up to 20 text documents at a time. Can be used for any text files or programming. </description>
          <created date="20131205" />
          <modified date="20131205" />
      </app_info>
      <author_info>
          <name>Hazel Windle</name>
          <email>lead-dev@linux-paradise.co.uk</email>
          <company>Paradise Office</company>
      </author_info>
      <security>
          <encryption method="md5" />
          <keyfile link="check_20131205.md5" />
          <originating domain="http://www.paradise-office.co.uk" />
      </security>
      <language locale="en-gb" text="en-gb" direction="ltr" />
    </meta-information>
    
    <formats>
      <write_text_files file_ending="linux_or_mac" />
      <read_text_files file_ending="linux_or_mac" />
    </formats>
    
    <layout type="simple_screen" effects="animation">
    
      <menu_bar no_of_menus="5">
        <menu name="File" acckey="F">
          <menu_item name="New File" acckey="Ctrl + N" command="new" />
          <menu_item name="Open" acckey="Ctrl + O" command="open_upload" open_browser="upload_box" />
          <menu_item name="Save" acckey="Ctrl + S" command="save_download" open_browser="download_box" />
          <menu_item name="Save As" acckey="Ctrl + Shift + A" command="save_as_dl" opens_dialog="dialog_saveas.xml" />
          <menu_item name="Save All" acckey="Ctrl + L" plugin="save_all" />
          <menu_item name="Print Preview" acckey="Alt + P" command="print_view" opens_dialog="dialog_print_preview.xml" />
          <menu_item name="Print File" acckey="Ctrl + P" plugin="print" open_browser="print_box" />
          <menu_item name="Close File" acckey="Ctrl + W" command="close_file" opens_dialog="dialog_confirm.xml" />
        </menu>
        <menu name="Edit" acckey="E">
          <menu_item name="Undo" acckey="Ctrl + Z" command="undo" />
          <menu_item name="Redo" acckey="Ctrl + R" command="redo" />
          <menu_item name="Undo History" acckey="Shift + Ctrl + Z" command="undo_history" />
          <separator />
          <menu_item name="Cut" acckey="Ctrl + X" plugin="cut_words" />
          <menu_item name="Copy" acckey="Ctrl + C" plugin="copy_words" />
          <menu_item name="Paste" acckey="Ctrl + V" plugin="paste_words" />
          <menu_item name="Clipboard" acckey="Ctrl Shift + V" plugin="clipboard_words" opens_dialog="dialog_clipboard.xml" />
          <separator />
          <menu_item name="Insert Character" plugin="insert_char" opens_dialog="dialog_insert_char.xml" />
          <menu_item name="UPPER CASE" acckey="Ctrl + U" plugin="text_case" options="upper" />
          <menu_item name="lower case" acckey="Shift + Ctrl + U" plugin="text_case" options="lower" />
          <menu_item name="Title Case" acckey="Ctrl + T" plugin="text_case" options="title" />
          <menu_item name="Find and Replace" acckey="Ctrl + F" plugin="find_and_replace" opens_dialog="dialog_find_and_replace.xml" />
        </menu>
        <menu name="Bookmarks" acckey="B">
            <menu_item name="Add Bookmark" acckey="Shift + Ctrl + B" plugin="add_bookmark" opens_dialog="dialog_bookmark_name.xml"  />
            <separator />
            <menu_item name="Line 1: First Line" plugin="bookmark" option="First Line" />
        </menu>
        <menu name="Options" acckey="O">
            <menu_item name="Change Font" plugin="change_font" opens_dialog="dialog_change_font.xml" />
            <menu_item name="Set Tab Width" plugin="set_tab_width" opens_dialog="dialog_set_tab_width.xml" />
            <menu_item name="CSV Fields" plugin="csv_fields" opens_dialog="dialog_csv_fields.xml" />
            <menu_item name="Highlighting" plugin="syntax_highlighter" opens_dialog="dialog_syntax_highlighter.xml" />
            <menu_item name="Spellcheck" acckey="F7" plugin="spellcheck" opens_dialog="dialog_spellcheck.xml" />
            <menu_item name="Sort" plugin="sort_text" opens_dialog="dialog_sort.xml" />
        </menu>
        <menu name="Help" acckey="H">
            <menu_item name="Help Contents" command="help" acckey="F1" />
        </menu>
        
   </layout>
 </program>