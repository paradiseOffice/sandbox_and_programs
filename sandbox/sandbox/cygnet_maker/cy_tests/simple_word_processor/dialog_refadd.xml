<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<!DOCTYPE dialog PUBLIC "-//paradise-office//DTD cygnet-dialog 0.1//EN" "http://www.linux-paradise.co.uk/DTDs/cygnet/dialogs.dtd">
  <dialog type="modal" name="Add biblo reference">
    <field_box name="Links">
      <row num="1">
        <label name="Link to: " />
      </row>
      <row num="2">
        <text_field name="URL 1" valid="web_address" plugin="biblo_add" options="link_1" />
      </row>
      <row num="3">
        <text_field name="URL 2" valid="web_address" plugin="biblo_add" options="link_2" />
      </row>
    </field_box>
    <field_box name="formatting">
      <row num="4">
        <radio_btns_wLabel group="formatting" name="Link as a page footnote" options="footnote" plugin="biblo_add" />
      </row>
      <row num="5">
        <radio_btns_wLabel group="formatting" name="Clickable number to source" plugin="biblo_add" options="inline_cite" />
      </row>
      <row num="6">
        <radio_btns_wLabel group="formatting" name="Reference in biblography table (last page)" plugin="biblo_add" options="biblo_table" />
      </row>
    </field_box>
    
    <button name="OK" command="ok" /><button name="Cancel" command="cancel" />
  </dialog>